<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/headingView"
            android:layout_width="255dp"
            android:layout_height="66dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="Here is an analysis of the Iris image"
            tools:layout_editor_absoluteX="184dp"
            tools:layout_editor_absoluteY="43dp" />

        <ImageView
            android:id="@+id/irisView"
            android:layout_width="164dp"
            android:layout_height="199dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            tools:srcCompat="@mipmap/iris_image" />

        <TextView
            android:id="@+id/subtitleTextView"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="The above iris can be classified as: " />

        <TextView
            android:id="@+id/classificationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Classification_Here" />
    </LinearLayout>
</RelativeLayout>